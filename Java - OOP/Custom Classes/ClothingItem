// ClothingItem class
public class ClothingItem {
    /** private protected fields accessible only to
    program inside the class
     */
    private String type;
    private String size;
    private double price;
    private int quantity;

    // allowing program outside the class to access fields
    // get type
    public String getType() {
        return type;
    }
    // set typ
    public void setType(String type) {

        this.type = type;
    }
    // get size
    public String getSize() {

        return size;
    }
    // set size
    public void setSize(String size) {

        this.size = size;
    }
    // get price
    public double getPrice() {

        return price;
    }
    // set price
    public void setPrice(double price) {

        this.price = price;
    }
    // get quantity
    public int getQuantity() {

        return quantity;
    }
    // set quantity
    public void setQuantity(int quantity) {

        this.quantity = quantity;
    }
}





// Implementation of ClothingItem class
import com.company.model.ClothingItem;

import java.text.NumberFormat;

public class Main {

    public static void main(String[] args) {
	// constructor
        var item = new ClothingItem();
        // accessing fields from class
        item.setType("Shirt");
        item.setSize("M");
        item.setPrice(19.99);
        item.setQuantity(3);

        // perform calculation on quantity
        var totalPrice = item.getPrice() * item.getQuantity();
        // format currency
        var formatter = NumberFormat.getCurrencyInstance();
        // output variable with place holder
        var output = String.format("Your %s order will cost %s",
                item.getType(),
                formatter.format(totalPrice));
        // display output on console
        System.out.println(output);
    }
}
